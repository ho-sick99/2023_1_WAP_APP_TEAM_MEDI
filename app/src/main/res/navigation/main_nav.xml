<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.android.mediproject.feature.splash.SplashFragment"
        android:label="SplashFragment">
        <argument
            android:name="@string/hideBottom"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>

    <include app:graph="@navigation/community_nav" />
    <include app:graph="@navigation/mypage_nav" />
    <include app:graph="@navigation/setting_nav" />
    <include app:graph="@navigation/intro_nav" />
    <include app:graph="@navigation/home_nav" />

    <action
        android:id="@+id/action_to_setting_nav"
        app:destination="@id/setting_nav"
        app:popUpTo="@id/home_nav"
        app:popUpToInclusive="false" />

    <action
        android:id="@+id/action_to_community_nav"
        app:destination="@id/community_nav"
        app:popUpTo="@id/home_nav"
        app:popUpToInclusive="false" />
</navigation>